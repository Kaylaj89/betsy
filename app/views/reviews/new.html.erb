<div class="form-group">

  <!--<span class="star-rating star-5">-->

  <%= form_with model: [@product, @review] do |f| %>
    <%= f.label :rating %>
    <br>
    <%= f.radio_button(:rating, 5) %>
    <%= label_tag(:rating, 5) %>

    <%= f.radio_button(:rating, 4) %>
    <%= label_tag(:rating, 4) %>

    <%= f.radio_button(:rating, 3) %>
    <%= label_tag(:rating, 3) %>

    <%= f.radio_button(:rating, 2) %>
    <%= label_tag(:rating, 2) %>

    <%= f.radio_button(:rating, 1) %>
    <%= label_tag(:rating, 1) %>

    <%= hidden_field(:product_id, :value => @product.id) %>

    </div>

    <div class="form-group">
      <%= f.label :description %>
      <br>
      <%= f.text_area :description, :class => "form-control" %>
    </div>

    <!--</section>-->

    <%= f.submit "Create Review", class: "" %>
  <% end %>