<section class="container text-center">

<!--IF VIEWER IS THE ORDER'S MERCHANT-->
  <% if @order.order_items.any? { |order_item| order_item.product.merchant_id == @login_user.id } %>

    <div class="top-banner">
      <%= image_tag("userlookup.gif", :alt => "user banner") %>
    </div>

    <table class="table table-hover">
      <thead>
      <tr class="table-active">
        <th scope="col">Merchant Earnings</th>
        <th scope="col">Purchase Date</th>
        <th scope="col">Current Status</th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <td>$<%= @order.order_total(@login_user.id) %></td>
          <td><%= readable_date(@order.created_at) %></td>
          <td><%= @order.status %></td>
        </tr>
      </tbody>
    </table>

    <table class="table table-hover">
      <thead>
      <tr class="table-active">
        <th scope="col">Customer Name</th>
        <th scope="col">Address</th>
        <th scope="col">Zip</th>
        <th scope="col">Credit Card</th>
        <th scope="col">Expiration</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td>$<%= @order.name %></td>
        <td><%= @order.address %></td>
        <td><%= @order.zip_code %></td>
        <td><%= @order.credit_card_end(@order.credit_card) %></td>
        <td><%= @order.exp_date %></td>
      </tr>
      </tbody>
    </table>

<!--IF VIEWER IS SOMEONE ELSE, IT'S CONFIRMATION SCREEN-->
  <% else %>

    <div class="top-banner">
      <%= image_tag("market_banner.gif", :alt => "marketplace banner") %>
    </div>

  <% end %>

</section>