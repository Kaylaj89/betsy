<section class="container">
<!--  <h2>Browse All Products In <%#= @categorization.name.capitalize %></h2>-->

  <div class="container">
    <div class="top-banner">
      <%= image_tag("market_bazaar.gif", :alt => "marketplace banner") %>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <% Categorization.print_categories.each do |category| %>
        <div class="col-sm text-center">
          <h3><%= link_to category.name, categorization_path(category.id), :class => "badge badge-secondary badge-pill"%></h3>
        </div>
      <% end %>
    </div>
  </div>

  <h2 class="text-center"><< <%= @categorization.name %> >></h2>
  <%= render partial: 'products/product-grid', locals: { products: @categorization.products.where.not(active: false, merchant_id: @login_user.id) } %>
</section>