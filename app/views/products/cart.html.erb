
<h1>Your Shopping Cart:</h1>
<%    if @cart.empty?
        @cart = "Your cart is currently empty!" %>
        <%= @cart %>
<% else %>
  <% @cart.each do |item| %>
    <ul>
    <li><%= link_to item["name"], products_path(item["id"])  %></li>
    <li><%= item["price"] %></li>
      <li>Quantity: coming soon</li>

    </ul>
  <% end %>
  <%= link_to "Clear Cart", clear_cart_path %>
<% end %>
<%= link_to "Go Shopping", products_path %>



